{
  "name": "@nomos-ui/form",
  "version": "0.0.1",
  "description": "React components library that integrate seamlessly Shadcn and React Hook Form",
  "main": "dist/index.js",
  "module": "dist/exports/index.js",
  "types": "dist/exports/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/exports/index.d.ts",
      "import": "./dist/exports/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "components": ["./dist/components/index.d.ts"],
      "hooks": ["./dist/hooks/index.d.ts"],
      "utils": ["./dist/utils/index.d.ts"],
      "types": ["./dist/types/index.d.ts"]
    }
  },
  "scripts": {
    "build": "trash dist && tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "react",
    "react-hook-form",
    "form",
    "forms",
    "validation",
    "components",
    "ui",
    "input",
    "select",
    "checkbox",
    "accessible",
    "a11y",
    "tailwind",
    "typescript",
    "nomos"
  ],
  "author": "Uanela Como",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uanela/nomos-ui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/uanela/nomos-ui/issues"
  },
  "homepage": "https://github.com/uanela/nomos-ui/tree/main/packages/react#readme",
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tailwindcss": "^4.1.16",
    "trash-cli": "^7.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "react-hook-form": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
